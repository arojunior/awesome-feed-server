{
  "name": "awesome-feed-server",
  "version": "0.0.1",
  "description": "Awesome feed server with NodeJs and GraphQL",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/arojunior/awesome-feed-server"
  },
  "engines": {
    "node": "^10"
  },
  "author": "Junior Oliveira",
  "license": "MIT",
  "homepage": "http://arojunior.com",
  "dependencies": {
    "apollo-server": "^2.3.1",
    "apollo-server-express": "^2.14.2",
    "axios": "^0.19.0",
    "body-parser": "^1.17.2",
    "express": "4.17.1",
    "graphql": "^14.4.1",
    "graphql-playground-middleware-express": "^1.7.2",
    "graphql-tools": "^4.0.5",
    "merge-graphql-schemas": "^1.5.3",
    "now": "^16.5.2",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "^6.5.2",
    "babel-eslint": "^10.0.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.0",
    "prettier-eslint": "^9.0.0",
    "rimraf": "^2.6.2",
    "supertest": "^4.0.2"
  },
  "scripts": {
    "build": "babel -d ./build ./src --copy-files",
    "prebuild": "rimraf build/*",
    "start": "NODE_ENV=production node ./build/index.js",
    "deploy": "now ./build --token=$NOW_TOKEN --public --env GITHUB_TOKEN=$GITHUB_TOKEN",
    "prestart": "yarn build",
    "dev": "nodemon ./src/index.js --exec babel-node",
    "test": "jest --verbose=false",
    "lint": "eslint src",
    "prepush": "yarn lint && yarn build"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./build"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  }
}
